<div class = 'inner cover'>
    <div class = 'row news-header'>
        <div class = 'col-md-12'>
            <h1 class = 'cover-heading'>Sports News</h1>
        </div>
    </div>
    <div class = 'row news-header'>
        <div class = 'col-md-6 icons'>
            <%= link_to fa_icon('bicycle'), '', class: 'yellow-text' %>
        </div>
        <div class = 'col-md-6 icons'>
            <%= link_to fa_icon('code'), tech_news_path, class: 'yellow-text' %>
        </div>
    </div>
    <div class = 'row'>
        <% @sports.each do |sport| %>
            <div class = 'col-md-6'>
                <div class = 'tech-news'>
                    <div class = 'card'>
                        <%= twitter_parser sport %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>