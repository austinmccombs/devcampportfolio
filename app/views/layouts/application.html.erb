<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <met name="keywords" content= "<%= @seo_keywords %>" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

      <%= render 'shared/navbar', location: 'applications' %>
      <%= login_helper %>

      <%= yield %>

      <%= @copyright %>

      <% if session[:source]%>
        <p>Thanks for visiting from <%= session[:source] %></p>
      <% end %>
  </body>
</html>
