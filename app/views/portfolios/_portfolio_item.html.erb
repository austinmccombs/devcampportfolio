
<div class = 'col-md-4'>
  <div class="card shadow-lg" data-id= '<%=portfolio_item.id%>'>
      <%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb'), width: '100%' %>

      <div class="card-body">
        <p class="card-text">
          <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span>
          <%= portfolio_item.subtitle %>
        </p>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group btn-outline-warning">
            <%= link_to "Edit", edit_portfolio_path(portfolio_item), class: 'btn btn-sm btn-outline-secondary' if logged_in?(:site_admin)%>
            <%= link_to 'Delete', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-secondary' if logged_in?(:site_admin)%>
          </div>
        </div>
      </div>
    </div>  
  </div>
  
  

